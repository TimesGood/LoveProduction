<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".mvp.ui.activity.TransferVerifyActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">
        <include layout="@layout/title_include"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_scrollFlags="scroll|enterAlways" />
        <include layout="@layout/find_include"/>
        <GridLayout
            android:id="@+id/grid_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:background="@drawable/shape_while_grey_stroke">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/orderId_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="生产单号:"/>
                <TextView
                    android:id="@+id/orderId_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/orderId_to"
                    android:textSize="16sp"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/plan_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="方案:"/>
                <TextView
                    android:id="@+id/plan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/plan_to"
                    android:textSize="16sp"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
                <TextView
                    android:id="@+id/not_pack_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="未包件数:"/>
                <TextView
                    android:id="@+id/not_pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/not_pack_to"
                    android:textSize="16sp"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
                <TextView
                    android:id="@+id/not_transfer_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="未转包数:"/>
                <TextView
                    android:id="@+id/not_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/not_transfer_to"
                    android:textSize="16sp"
                    android:text=""/>
            </RelativeLayout>
        </GridLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <com.aige.loveproduction.mvp.ui.customui.StatusLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.aige.loveproduction.mvp.ui.customui.viewgroup.DampNestedScrollView
            android:id="@+id/damp_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.aige.loveproduction.adapter.WrapRecyclerView
                android:id="@+id/recyclerview_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.aige.loveproduction.mvp.ui.customui.viewgroup.DampNestedScrollView>
    </com.aige.loveproduction.mvp.ui.customui.StatusLayout>

    <include layout="@layout/loading_layout" android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>