<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".mvp.ui.activity.TransfersActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">
        <include layout="@layout/title_include"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_scrollFlags="scroll|enterAlways" />
        <include layout="@layout/find_include"/>
        <GridLayout
            android:id="@+id/grid_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:background="@drawable/shape_while_grey_stroke">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/orderId_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/order_id"/>
                <TextView
                    android:id="@+id/orderId_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/orderId_to"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/plan_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/solution_name_"/>
                <TextView
                    android:id="@+id/plan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/plan_to"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
                <TextView
                    android:id="@+id/not_pack_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/not_pack"/>
                <TextView
                    android:id="@+id/not_pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/not_pack_to"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=""/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
                <TextView
                    android:id="@+id/not_transfer_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/not_transfer_pack"/>
                <TextView
                    android:id="@+id/not_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/not_transfer_to"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=""/>
            </RelativeLayout>
            <TextView
                android:id="@+id/status_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                android:textSize="20sp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/red"/>
        </GridLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <com.aige.loveproduction.mvp.ui.customui.StatusLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.aige.loveproduction.mvp.ui.customui.viewgroup.DampNestedScrollView
            android:id="@+id/damp_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--            <include layout="@layout/recyclerview_data_include"/>-->
            <com.aige.loveproduction.adapter.WrapRecyclerView
                android:id="@+id/recyclerview_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.aige.loveproduction.mvp.ui.customui.viewgroup.DampNestedScrollView>
    </com.aige.loveproduction.mvp.ui.customui.StatusLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>