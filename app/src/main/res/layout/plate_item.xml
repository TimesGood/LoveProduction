<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/grey2">
        <TextView
            android:id="@+id/opname"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/op_name"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/operation_date"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:text="@string/operation_date"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/operation_name"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:text="@string/operation_name"
            android:textColor="@color/black"

            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="1dp"/>
        <TextView
            android:id="@+id/operation_group"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:text="@string/operation_group"
            android:textColor="@color/black"

            android:layout_marginEnd="1dp"/>


</LinearLayout>