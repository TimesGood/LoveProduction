<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ui.activity.ExamineActivity">
    <include layout="@layout/title_include"/>
    <com.aige.loveproduction.ui.customui.viewgroup.DampNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/on_stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_while"
                android:layout_marginBottom="1dp">
                <ImageView
                    android:id="@+id/examine_in_img"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/examine_in_img"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/examine_in_img"
                    android:text="@string/on_stock_examine"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/in_stock_but"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:theme="@style/SwitchCompat.Control"
                    android:layout_marginEnd="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/out_stock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_while"
                android:layout_marginBottom="1dp">
                <ImageView
                    android:id="@+id/examine_out_img"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/examine_out_img"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/out_stock_examine"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_toEndOf="@+id/examine_out_img"
                    android:layout_centerVertical="true"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/out_stock_but"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:theme="@style/SwitchCompat.Control"
                    android:layout_marginEnd="10dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </com.aige.loveproduction.ui.customui.viewgroup.DampNestedScrollView>


</LinearLayout>