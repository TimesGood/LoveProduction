<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:background="@color/background">
    <include layout="@layout/title_include"/>
    <com.aige.loveproduction.customui.viewgroup.NoScrollViewPager
        android:id="@+id/main_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_below="@id/toolbar_title"
        android:layout_marginBottom="50dp">
    </com.aige.loveproduction.customui.viewgroup.NoScrollViewPager>
    <LinearLayout
        android:id="@+id/below_lay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_ripple_result">
            <ImageView
                android:id="@+id/home_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_image_off"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/home_img"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_ripple_result">
            <ImageView
                android:id="@+id/user_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user_image_off"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/person_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_img"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>