<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recyclerview_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_while_grey_stroke"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/barcode_to"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="@string/barcode"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/barcode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/barcode_to"
            android:layout_alignTop="@+id/barcode_to"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/storage_bit_name_to"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/storage_bit_name"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_below="@id/barcode_to"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/storage_bit_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/storage_bit_name_to"
            android:layout_alignTop="@+id/storage_bit_name_to"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/not_in_storage_to"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/not_in_storage"
            android:gravity="center"
            android:layout_below="@+id/storage_bit_name_to"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/not_in_storage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/not_in_storage_to"
            android:layout_alignTop="@+id/not_in_storage_to"
            android:textColor="@color/black"/>
    </RelativeLayout>

</LinearLayout>